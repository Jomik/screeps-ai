{
  "compilerOptions": {
    "lib": ["ES2019.Array"],
    "target": "ES2018",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
