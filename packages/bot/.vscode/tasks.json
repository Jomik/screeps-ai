{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "deploy:watch",
      "command": "yarn",
      "args": ["deploy:private", "--watch"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^\\[!\\]\\s*\\(.*?\\)\\s*Error:\\s*([^\\s].*):(\\d+):(\\d+)\\s*-\\s*(error|warning|info)\\s*(TS\\d+)\\s*:\\s*(.*)",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "bundles src/main.ts â†’ dist/main.js...",
          "endsPattern": ".*waiting for changes..."
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
