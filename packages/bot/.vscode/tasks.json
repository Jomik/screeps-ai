{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "deploy:watch",
      "command": "yarn",
      "args": ["deploy:private", "--watch"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^\\[!\\]\\s*\\(.*?\\)\\s*Error:\\s*([^\\s].*)\\((\\d+,\\d+)\\):\\s*semantic\\s*(error|warning|info)\\s*(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "bundles src/main.ts â†’ dist/main.js...",
          "endsPattern": "created dist/main.js in.*"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
