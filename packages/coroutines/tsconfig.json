{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "allowUnreachableCode": true
  }
}
